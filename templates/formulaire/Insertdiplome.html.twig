{% extends 'base.html.twig' %}

{% block title %}Hello FormulaireController!
<link rel="stylesheet" href="https://bootswatch.com/_vendor/bootstrap/dist/css/bootstrap.css">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form action="/ville" method="post">
        <fieldset>
            <legend>Formulaire</legend>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Ville</label>
                <select name="ville" type="text" class="form-control" id="ville"  placeholder="Enter ville">

                {% for ville in villes %}
                <option value={{ville.id}}>{{ ville.nom }}</option>
                {% endfor %}

                </select>
                <small id="emailHelp" class="form-text text-muted">We'll never share your name with anyone else.</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
</div>
{% endblock %}
